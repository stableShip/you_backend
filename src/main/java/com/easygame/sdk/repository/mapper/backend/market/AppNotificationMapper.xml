<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper
	namespace="com.easygame.sdk.repository.mapper.backend.market.AppNotificationMapper">

	<resultMap id="AppNotificationModifyDTO"
		type="com.easygame.sdk.repository.model.dto.backend.market.AppNotificationModifyDTO">
		<id column="id" property="appNotificationId" jdbcType="INTEGER" />
		<result column="app_id" property="appId" jdbcType="INTEGER" />
		<result column="name" property="appName" jdbcType="VARCHAR" />
		<result column="icon_url" property="iconUrl" jdbcType="VARCHAR" />
		<result column="promotion_word" property="promotionWord"
			jdbcType="VARCHAR" />
		<result column="package_name" property="packageName" jdbcType="VARCHAR" />
		<result column="download_url" property="downloadUrl" jdbcType="VARCHAR" />
	</resultMap>
	<select id="selectAppNotificationByPrimaryKey" resultMap="AppNotificationModifyDTO"
		parameterType="java.lang.Integer">
		SELECT
		t_apps.`name`,
		t_apps_notification.id,
		t_apps_notification.app_id,
		t_apps_notification.icon_url,
		t_apps_notification.package_name,
		t_apps_notification.promotion_word,
		t_apps_notification.download_url
		FROM
		t_apps,
		t_apps_notification
		WHERE
		t_apps_notification.app_id = t_apps.id
		AND t_apps_notification.app_id =
		#{id,jdbcType=INTEGER}
	</select>

	<insert id="insertAppNotification"
		parameterType="com.easygame.sdk.repository.model.po.AppNotification">
		<selectKey resultType="java.lang.Integer" keyProperty="id"
			order="AFTER">
			SELECT @@IDENTITY
		</selectKey>
		insert into t_apps_notification
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null">
				id,
			</if>
			<if test="appId != null">
				app_id,
			</if>
			<if test="iconUrl != null">
				icon_url,
			</if>
			<if test="promotionWord != null">
				promotion_word,
			</if>
			<if test="packageName != null">
				package_name,
			</if>
			<if test="downloadUrl != null">
				download_url,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null">
				#{id,jdbcType=INTEGER},
			</if>
			<if test="appId != null">
				#{appId,jdbcType=INTEGER},
			</if>
			<if test="iconUrl != null">
				#{iconUrl,jdbcType=VARCHAR},
			</if>
			<if test="promotionWord != null">
				#{promotionWord,jdbcType=VARCHAR},
			</if>
			<if test="packageName != null">
				#{packageName,jdbcType=VARCHAR},
			</if>
			<if test="downloadUrl != null">
				#{downloadUrl,jdbcType=VARCHAR},
			</if>
		</trim>
	</insert>

	<update id="updateAppNotification"
		parameterType="com.easygame.sdk.repository.model.po.AppNotification">
		update t_apps_notification
		<set>
			<if test="appId != null">
				app_id = #{appId,jdbcType=INTEGER},
			</if>
			<if test="iconUrl != null">
				icon_url = #{iconUrl,jdbcType=VARCHAR},
			</if>
			<if test="promotionWord != null">
				promotion_word = #{promotionWord,jdbcType=VARCHAR},
			</if>
			<if test="packageName != null">
				package_name = #{packageName,jdbcType=VARCHAR},
			</if>
			<if test="downloadUrl != null">
				download_url = #{downloadUrl,jdbcType=VARCHAR},
			</if>
		</set>
		where id = #{id,jdbcType=INTEGER}
	</update>

	<resultMap id="NotificationAppInformationResultDTO"
		type="com.easygame.sdk.repository.model.dto.webservices.NotificationAppInformationResultDTO">
		<result column="name" property="appName" jdbcType="VARCHAR" />
		<result column="icon_url" property="appIcon" jdbcType="VARCHAR" />
		<result column="promotion_word" property="appPromotionWord" jdbcType="VARCHAR" />
		<result column="package_name" property="appPackageName" jdbcType="VARCHAR" />
		<result column="download_url" property="appDownloadUrl" jdbcType="VARCHAR" />
	</resultMap>
	<select id="getNotificationAppInformation" resultMap="NotificationAppInformationResultDTO"
		parameterType="java.lang.Integer">
		SELECT
		t_apps.`name`,
		t_apps_notification.icon_url,
		t_apps_notification.promotion_word,
		t_apps_notification.package_name,
		t_apps_notification.download_url
		FROM
		t_apps,
		t_apps_notification
		WHERE
		t_apps.id = t_apps_notification.app_id
		AND t_apps_notification.app_id = (
		SELECT
		t_apps_notification_selected.app_id
		FROM
		t_apps_notification_selected
		LIMIT 1
		)
	</select>
	
	<update id="updateAppNotificationSelected"
		parameterType="int">
		update t_apps_notification_selected
		<set>
			<if test="appId != null">
				app_id = #{appId,jdbcType=INTEGER},
			</if>
		</set>
	</update>

</mapper>