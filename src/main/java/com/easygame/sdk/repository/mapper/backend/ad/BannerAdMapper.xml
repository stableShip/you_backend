  <select id="selectBannerAdListByCriteria" resultMap="BannerAdShowVO" parameterType="com.easygame.sdk.repository.model.dto.backend.ad.search.BannerAdSearchCriteriaDTO">
  SELECT
		t_banner_ads.id,
		t_banner_ads.`name`,
		t_banner_ads.image_Url,
		t_banner_ads.download_Url,
		t_banner_ads.cpa_Appkey
		FROM
		(
		SELECT
		t_banner_ads.id
		FROM
		t_banner_ads
		WHERE
		1 = 1
		<if test="searchCpaAppKey != null">
			AND t_banner_ads.`cpa_Appkey` LIKE '%${searchCpaAppKey}%'
		</if>
		<if test="searchBannerAdName != null">
			AND t_banner_ads.`name` LIKE '%${searchBannerAdName}%'
		</if>
		LIMIT
		#{pagination.startRow,jdbcType=INTEGER},
		#{pagination.pageSize,jdbcType=INTEGER}
		) AS selectedData
		LEFT JOIN
		t_banner_ads ON selectedData.id = t_banner_ads.id
		order by
		t_banner_ads.id desc
  </select>
  
   <select id="selectBannerAdMaxId" resultType="int">
		SELECT
		IFNULL(MAX(id),0)
		FROM t_banner_ads
	</select>
	
  <select id="checkIfBannerAdExist" resultType="int">
		SELECT
		count(t_banner_ads.id)
		FROM
		t_banner_ads
		WHERE
		t_banner_ads.`name` =
		#{bannerAdName,jdbcType=VARCHAR}
		<if test="id != null">
			<if test="id != 0">
				AND t_banner_ads.id != #{id,jdbcType=INTEGER}
			</if>
		</if>
	</select>
  
  <select id="checkBannerAdDeleteSecurity" resultType="java.lang.Integer" parameterType="java.lang.Integer">
		SELECT
		count(t_promotions.id)
		FROM
		t_promotions
		WHERE
		t_promotions.bannerAd_id = #{id,jdbcType=INTEGER}
	</select>
  
  <select id="selectBannerAdByPrimaryKey" resultMap="BannerAdShowVO"
		parameterType="java.lang.Integer">
		SELECT
		 id, name, image_url, download_url, cpa_appKey from t_banner_ads where id = #{id,jdbcType=INTEGER}
	</select>
  
  <select id="getBannerAdListTotalCountByCriteria" resultType="int" parameterType="com.easygame.sdk.repository.model.dto.backend.ad.search.BannerAdSearchCriteriaDTO">
		SELECT
		count(t_banner_ads.id)
		FROM
		t_banner_ads
		WHERE 1 = 1
		<if test="searchCpaAppKey != null">
			AND t_banner_ads.`cpa_appKey` LIKE '%${searchCpaAppKey}%'
		</if>
		<if test="searchBannerAdName != null">
			AND t_banner_ads.`name` LIKE '%${searchBannerAdName}%'
		</if>
	</select>
  
  <insert id="insertBannerAd" parameterType="com.easygame.sdk.repository.model.po.BannerAd" >
  <selectKey resultType="java.lang.Integer" keyProperty="id"
			order="AFTER">
			SELECT @@IDENTITY
		</selectKey>
    insert into t_banner_ads
